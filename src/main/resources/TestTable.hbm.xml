<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.example.api.model.TestTable" table = "tabela_testowa">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "kolumna1" column = "kolumna1" type = "String"/>
        <property name = "kolumna2" column = "kolumna2" type = "string"/>
        <property name = "kolumna3" column = "kolumna3" type = "string"/>
        <property name = "kolumna4" column = "kolumna4" type = "int"/>

    </class>
</hibernate-mapping>